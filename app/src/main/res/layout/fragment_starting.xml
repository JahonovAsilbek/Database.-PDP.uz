<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pdp_main_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StartingFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/pdp_main_logo"
        android:src="@drawable/pdp_logo"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout_cardlaruchun"
        android:orientation="horizontal"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/pdp_main_logo"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/main_color"
            app:cardElevation="5dp"
            android:background="?selectableItemBackground"
            android:foreground="?selectableItemBackground"
            android:id="@+id/kurslar_cardview"
            android:layout_marginLeft="32dp"
            app:cardCornerRadius="12dp"
            android:outlineSpotShadowColor="#dddddd"
            android:layout_width="150dp"
            android:layout_height="130dp">

            <ImageView
                android:src="@drawable/kurslar_vektor"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="80dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="Kurslar"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/main_color"
            app:cardElevation="5dp"
            android:id="@+id/guruhlar_cardview"
            android:background="?selectableItemBackground"
            android:foreground="?selectableItemBackground"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="32dp"
            app:cardCornerRadius="12dp"
            android:outlineSpotShadowColor="#dddddd"
            android:layout_width="150dp"
            android:layout_height="130dp">

            <ImageView
                android:src="@drawable/guruhlar_vector"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="80dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="Guruhlar"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/linearLayout_cardlaruchun"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/main_color"
        app:cardElevation="5dp"
        android:id="@+id/mentorlar_cardview"
        android:layout_marginTop="25dp"
        android:background="?selectableItemBackground"
        android:elevation="10dp"
        android:foreground="?selectableItemBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="12dp"
        android:outlineSpotShadowColor="#dddddd"
        android:layout_width="160dp"
        android:layout_height="130dp">

        <ImageView
            android:src="@drawable/mentorlar_vector"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="80dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:text="Mentorlar"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/main_color"
        android:text="PDP.uz"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>